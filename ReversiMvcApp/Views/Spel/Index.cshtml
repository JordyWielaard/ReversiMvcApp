@model IEnumerable<ReversiMvcApp.Models.Spel>

@{
    ViewData["Title"] = "Spellen";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nieuw spel maken</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler1Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Token)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speler1Token)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Token">Mee Spelen</a>
            </td>
        </tr>
}
    </tbody>
</table>
